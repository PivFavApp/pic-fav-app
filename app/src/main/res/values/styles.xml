<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Style -->
    <style name="Roboto.Normal" parent="@android:style/TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Roboto.Bold" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>


    <!-- Colors -->
    <style name="Roboto.Normal.White" parent="Roboto.Normal">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Roboto.Normal.Black" parent="Roboto.Normal">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Roboto.Bold.White" parent="Roboto.Bold">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="Roboto.Bold.Black" parent="Roboto.Bold">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Roboto.Normal.Accent" parent="Roboto.Normal">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Roboto.Normal.Grey" parent="Roboto.Normal">
        <item name="android:textColor">@color/colorGrey</item>
    </style>



    <!-- Size -->
    <style name="Roboto.Normal.White.12" parent="Roboto.Normal.White">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Roboto.Normal.White.14" parent="Roboto.Normal.White">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Roboto.Normal.White.16" parent="Roboto.Normal.White">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Roboto.Normal.White.20" parent="Roboto.Normal.White">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Roboto.Normal.Grey.16" parent="Roboto.Normal.Grey">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Roboto.Bold.White.12" parent="Roboto.Bold.White">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Roboto.Bold.White.16" parent="Roboto.Bold.White">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Roboto.Bold.White.18" parent="Roboto.Bold.White">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Roboto.Bold.White.30" parent="Roboto.Bold.White">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Roboto.Normal.Accent.12" parent="Roboto.Normal.Accent">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Roboto.Normal.Black.14" parent="Roboto.Normal.Black">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Roboto.Normal.Black.16" parent="Roboto.Normal.Black">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Roboto.Bold.Black.18" parent="Roboto.Bold.Black">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Roboto.Bold.Black.22" parent="Roboto.Bold.Black">
        <item name="android:textSize">22sp</item>
    </style>


</resources>
